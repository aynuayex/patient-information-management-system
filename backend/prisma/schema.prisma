// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Patient {
  id            String        @id @default(uuid())
  fullName      String
  // imageUrl      String      // Path to the photo/image of the patient (optional)
  sex           String        // Gender of the patient
  age           String
  phone         String        // Phone number of the patient
  email         String
  // visitTime     String        // Visit time (e.g., "9:00 AM - 10:00 AM")
  doctor        String        // Name of the doctor attending the patient
  injury        String        // Description of the injury/condition (optional)
  //actions       String?        Actions related to patient records (e.g., "Edited by User X on Date Y")
  dateOfVisit   DateTime      @default(now())
}

